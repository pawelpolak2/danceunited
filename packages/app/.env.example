# Przelewy24 Configuration
# Get these values from your Przelewy24 Sandbox Panel
P24_MERCHANT_ID=
P24_POS_ID=
P24_CRC=
P24_API_KEY=
P24_SANDBOX=true

# App URLs (Change for production)
APP_URL=http://localhost:5173
P24_URL_RETURN=http://localhost:5173/dancer/my-packages
P24_URL_STATUS=http://localhost:5173/api/p24/notify

# Database Connection
DATABASE_URL="postgresql://user:password@localhost:5432/danceunited"

# Authentication
# Run `openssl rand -hex 32` to generate a secure secret
SESSION_SECRET="your-super-secret-session-key"

# Email Configuration (SMTP)
# Example using Gmail (requires App Password)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="Dance United <your-email@gmail.com>"
